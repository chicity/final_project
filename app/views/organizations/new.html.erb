<!-- Validation failure messages -->
<% if @organization.errors.any? %>
  <% @organization.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Organization</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_organization" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for org_name -->
      <div class="form-group">
        <label for="org_name" class="control-label">
          Org name
        </label>

        <input type="text" id="org_name" name="org_name" placeholder="Org name" class="form-control" value="<%= @organization.org_name %>">
      </div>

      <!-- Label and input for org_url -->
      <div class="form-group">
        <label for="org_url" class="control-label">
          Org url
        </label>

        <input type="text" id="org_url" name="org_url" placeholder="Org url" class="form-control" value="<%= @organization.org_url %>">
      </div>

      <button class="btn btn-success">
        Create Organization
      </button>
      or
      <a href="/organizations">Cancel</a>
    </form>
  </div>
</div>
