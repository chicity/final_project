<div class="page-header">
  <h1>
    Contact tasks
    <a href="/contact_tasks/new" class="btn btn-lg btn-success">New Contact task</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Belief</th>
        <th>User</th>
        <th>Target people</th>
        <th>Scheduled datetime</th>
        <th>Completion datetime</th>
        <th>Body</th>
        <th>Complete</th>
        <th>Actions</th>
      </tr>

      <% @contact_tasks.each do |contact_task| %>
      <tr>
        <td><%= contact_task.belief_id %></td>
        <td><%= contact_task.user_id %></td>
        <td><%= contact_task.target_people_id %></td>
        <td><%= contact_task.scheduled_datetime %></td>
        <td><%= contact_task.completion_datetime %></td>
        <td><%= contact_task.body %></td>
        <td><%= contact_task.complete %></td>
        <td>
          <a href="/contact_tasks/<%= contact_task.id %>" class="btn btn-primary">Show</a>
          <a href="/contact_tasks/<%= contact_task.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact_task/<%= contact_task.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
