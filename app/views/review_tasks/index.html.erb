<div class="page-header">
  <h1>
    Review tasks
    <a href="/review_tasks/new" class="btn btn-lg btn-success">New Review task</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Belief</th>
        <th>User</th>
        <th>Target people</th>
        <th>Scheduled datetime</th>
        <th>Completion datetime</th>
        <th>Body</th>
        <th>Complete</th>
        <th>Actions</th>
      </tr>

      <% @review_tasks.each do |review_task| %>
      <tr>
        <td><%= review_task.belief_id %></td>
        <td><%= review_task.user_id %></td>
        <td><%= review_task.target_people_id %></td>
        <td><%= review_task.scheduled_datetime %></td>
        <td><%= review_task.completion_datetime %></td>
        <td><%= review_task.body %></td>
        <td><%= review_task.complete %></td>
        <td>
          <a href="/review_tasks/<%= review_task.id %>" class="btn btn-primary">Show</a>
          <a href="/review_tasks/<%= review_task.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review_task/<%= review_task.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
