<div class="page-header">
  <h3>Review Task #<%= @review_task.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Belief</dt>
      <dd><%= @review_task.belief_id %></dd>

      <dt>User</dt>
      <dd><%= @review_task.user_id %></dd>

      <dt>Target people</dt>
      <dd><%= @review_task.target_people_id %></dd>

      <dt>Scheduled datetime</dt>
      <dd><%= @review_task.scheduled_datetime %></dd>

      <dt>Completion datetime</dt>
      <dd><%= @review_task.completion_datetime %></dd>

      <dt>Body</dt>
      <dd><%= @review_task.body %></dd>

      <dt>Complete</dt>
      <dd><%= @review_task.complete %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/review_tasks" class="btn btn-primary">
        Back
      </a>
      <a href="/review_tasks/<%= @review_task.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review_task/<%= @review_task.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
