<div class="page-header">
  <h1>
    Target organizations
    <a href="/target_organizations/new" class="btn btn-lg btn-success">New Target organization</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Priority Order</th>
        <th>Organization Name</th>
        <th>Organization Website</th>
        <th>Actions</th>
      </tr>

      <% @target_organizations.each do |target_organization| %>
      <tr>
        <td><%= target_organization.position %></td>
        <td><%= target_organization.org_name %></td>
        <td><%= target_organization.org_url %></td>
        <td>
          <a href="/target_organizations/<%= target_organization.id %>" class="btn btn-primary">Show</a>
          <a href="/target_organizations/<%= target_organization.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_target_organization/<%= target_organization.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
